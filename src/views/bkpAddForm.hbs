<div class="container">
  <div class="row">
    <div class="col-md-5 offset-md-3">
      <div class="card card-body bg-dark p-4 text-white rounder-0">
        <h3>Añade un respaldo</h3>
        <form action="/bkps/add" method="POST">
          <div>
            <label for="client">Cliente:</label>
            <div>
            <select class='form-control rounder-0 bg-dark text-white mb-3'name="client" id="client">
              <option>Choose</option>
              {{#each clients}}
              <option value="{{this.clientName}}">{{this.clientName}}</option>
              {{/each}}
           </select>       
          <div>
            <label for="server">Servidor:</label>
            <input
              class="form-control rounder-0 bg-dark text-white mb-3"
              name="server"
              placeholder="Server"
              id="server"
              cols="30"
              rows="10"
            ></input></div>
            <div>
            <label for="status">Estado del respaldo:</label>
            <select class='form-control rounder-0 bg-dark text-white mb-3'name="status" id="status">
              <option>Choose</option>
              {{#each bkpStatus}}
              <option value="{{this.status}}">{{this.status}}</option>
              {{/each}}
           </select>       
            <div>
            <label for="bkpType">Tipo de respaldo:</label>
            <input
              class="form-control rounder-0 bg-dark text-white mb-3"
              name="bkpType"
              placeholder="Tipo de respaldo"
              id="bkpType"
              cols="30"
              rows="10"
            ></input></div>
            <label for="bkpDate">Fecha de verificación:</label>
            <div>
            <input
              type="date"
              class="form-control rounder-0 bg-dark text-white mb-3"
              name="bkpDate"
              placeholder="Fecha de verificación"
              id="bkpDate"
              cols="30"
              rows="10"
            ></input></div>      
            <label for="bkpObservations">Observaciones:</label>
            <div>
            <textarea
              class="form-control rounder-0 bg-dark text-white mb-3"
              name="bkpObservations"
              placeholder="Observaciones"
              id="bkpObservations"
              cols="30"
              rows="5"
            ></textarea></div>
            
          <button class="btn btn-primary btn-sm mt-2">Add</button>
        </form>
      </div>
      </div>
  </div>
</div>